<% provide :title, t("password_resets.edit.title")  %>
<h1><%= t "password_resets.edit.title"  %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, url: password_reset_path(params[:id]), method: "patch") do |f| %>
      <%= render "shared/error_messages", object: f.object %>
      <%= hidden_field_tag :email, @user.email %>
      <%= f.label :password, t(".pass") %>
      <%= f.password_field :password, class: "form-control" %>
      <%= f.label :password_confirmation, t(".pass_confirm") %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
      <%= f.submit t(".submit_reset") , class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
