<% provide :title, t(".all_users") %>
<h1><%= t(".all_users") %></h1>
<ul class="users">
<% @users.each do |user| %>
  <li>
    <%= gravatar_for user %>
    <%= link_to user.name, user %>
    <% if current_user.admin? && !current_user?(user) %>
|   <%= link_to t(".delete"), user, method: :delete, data: {confirm: t(".confirm_delete")} %>
    <% end %>
  </li>
  <% end %>
<%= paginate @users, theme: "twitter-bootstrap-3" %>
</ul>
