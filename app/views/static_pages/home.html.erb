<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="stats">
        <%= render "shared/stats" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t "micropost.title" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
<div class="center jumbotron">
  <h1> <%= t ".intro" %></h1>
  <p><%= full_title t".content" %></p>
  <p>
    <br>
    <%= t ".content" %>
    <%= link_to t(".ruby_rails"), Settings.ruby_rails_book %>
    <%= t ".intro" %>
    <br>
  <%= link_to t(".register"), signup_path, class: "btn btn-lg btn-primary" %>
  </p>
</div>
<%= link_to image_tag("download.png", alt: t(".alt_rails")),
Settings.ruby_rails_book %>
<% end %>
